@model PaginatedList<Slider>
@{
    ViewData["Title"] = "Index";
    int dataOrder = (Model.PageIndex - 1) * 2;
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Authors</h1> <a class="btn btn-primary" asp-action="create">Create</a>
        </div>
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Sayı</th>
                        <th scope="col">Order</th>
                        <th scope="col">Name1</th>
                        <th scope="col">Name2</th>
                        <th scope="col">Image</th>

                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        dataOrder++;
                        <tr>
                            <th scope="row">@dataOrder</th>
                            <td>@item.Order</td>
                            <td>@item.Name1</td>
                            <td>@item.Name2</td>
                            <td>
                                <img width="250px" src="~/manage/uploads/sliders/@item.ImageName" />
                            </td>
                            <td>
                                <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">
                                    Edit
                                </a>
                                <a class="btn btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item @(Model.HasPrev?"":"disabled")">
                        <a class="page-link">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageIndex==i?"active":"")"><a class="page-link" asp-route-page="@i">@i</a></li>
                    }
                    <li class="page-item @(Model.HasNext?"":"disabled")">
                        <a class="page-link">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>




